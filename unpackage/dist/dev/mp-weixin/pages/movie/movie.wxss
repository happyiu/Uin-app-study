.player{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	background-color: black;
}
#myTrailer{
	width: 100%;
}
.movie{
	width: 100%;
	height: 440rpx;
}
.movie-info{
	padding: 40rpx 20rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	    -ms-flex-direction: row;
	        flex-direction: row;
	background-color: #f7f4f9;
}
.cover{
	width: 280rpx;
	height: 380rpx;
}
.movie-desc{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
	margin-left: 30rpx;
	width: 400rpx;
}
.title{
	font-size: 20px;
}
.basic-info{
	color: darkgray;
	font-size: 14px;
	white-space: nowrap;
	overflow: hidden;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
}
/* 评分块 */
.score-block{
	background-color: white;
	margin-top: 20rpx;
	width: 360rpx;
	height: 90rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	    -ms-flex-direction: row;
	        flex-direction: row;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	    -ms-flex-pack: start;
	        justify-content: flex-start;
	padding: 20rpx;
	/* 追加阴影效果 */
	-webkit-box-shadow: 3px 2px 10px #dedede;
	        box-shadow: 3px 2px 10px #dedede;
}
.score-words{
	font-size: 14px;
	color: grey;
}
.movie-score{
	font-size: 26px;
	font-weight: bold;
	margin-left: 8rpx;
	color: #FEAB2A;
	line-height: 60rpx;
}
.prise-counts{
	font-size: 14px;
	color: grey;
	line-height: 44rpx;
}
.score-stars{
	margin-top: 25rpx;
	margin-left: 25rpx;
}
.plots-block{
	background-color: #f7f4f9;
	padding: 20rpx 40rpx;
}
.plots-title{
	color: #A9A9A9;
	font-size: 16px;
}
.plots-desc{
	margin-top: 10rpx;
	font-size: 16px;
}
/* 剧照 */
.scroll-block{
	background-color: #f7f4f9;
	padding: 20rpx 40rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
}
.scroll-list{
	width: 100%;
	white-space: nowrap;
	margin-top: 20rpx;
}
.plot-image{
	width: 280rpx;
	height: 380rpx;
	margin-left: 10rpx;
}
/* 演职人员 */
.single-actor{
	width: 170rpx;
	height: 240rpx;
	margin-left: 10rpx;
}
.actor-wapper{
	display: inline-block;
}
.actor-name{
	width: 170rpx;
	text-align: center;
	font-size: 15px;
	overflow: hidden;
	white-space: nowrap;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
}
.actor-role{
	width: 170rpx;
	text-align: center;
	font-size: 13px;
	color: #A9A9A9;
	margin-top: 5rpx;
}

